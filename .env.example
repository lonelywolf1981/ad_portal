# Скопируйте в .env и заполните значения

APP_SECRET_KEY=CHANGE_ME_LONG_RANDOM

# Для HTTP (без HTTPS) оставьте false
APP_COOKIE_SECURE=false

# SQLite в volume ./data
SQLITE_PATH=/app/data/app.db

# Bootstrap локального администратора (создаётся при первом запуске, если в БД нет пользователей)
BOOTSTRAP_ADMIN_USER=admin
BOOTSTRAP_ADMIN_PASSWORD=ChangeMe123!

# Celery/Redis
REDIS_URL=redis://redis:6379/0
